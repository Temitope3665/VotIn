<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/colorWhite"
    tools:context=".ChatNavigation">

    <LinearLayout
        android:id="@+id/searchLayout"
        android:layout_width="match_parent"
        android:layout_height="61dp"
        app:layout_constraintTop_toTopOf="parent"
        android:background="@color/colorWhite"
        android:orientation="horizontal"
        android:paddingEnd="20dp"
        android:elevation="6dp"
        android:visibility="invisible">

        <ImageView
            android:id="@+id/backIcon"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:src="@drawable/ic_back"
            android:layout_gravity="center"
            android:layout_marginStart="15dp"/>

        <EditText
            android:id="@+id/searchBar"
            android:layout_width="280dp"
            android:layout_height="45dp"
            android:layout_marginStart="20dp"
            android:hint="Search"
            android:imeOptions="actionSearch"
            android:inputType="text"
            android:background="@null"
            android:layout_gravity="center"
            android:paddingStart="15dp" />

        <ImageView
            android:id="@+id/cancelIcon"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:src="@drawable/ic_cancel"
            android:layout_gravity="center"
            android:layout_marginStart="10dp"
            android:contentDescription="@string/app_name" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/topBarLayout"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        tools:ignore="MissingConstraints"
        android:paddingEnd="20dp">


        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/profileLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingStart="20dp"
            android:visibility="visible">

            <ImageView
                android:id="@+id/profilePicture"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:src="@drawable/profile_pic"
                android:contentDescription="@string/app_name"
                android:scaleType="centerCrop"
                tools:ignore="MissingConstraints" />

            <ImageView
                android:id="@+id/onlineColor"
                android:layout_width="11dp"
                android:layout_height="11dp"
                android:src="@drawable/online_status"
                app:layout_constraintEnd_toEndOf="parent"
                tools:ignore="MissingConstraints" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <TextView
            android:id="@+id/textChats"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/chats"
            android:fontFamily="@font/segoe"
            android:textSize="20sp"
            android:textColor="@color/colorBlack"
            android:paddingStart="20dp"
            android:visibility="visible"
            android:includeFontPadding="false"/>


        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center">


            <ImageView
                android:id="@+id/searchIcon"
                android:layout_width="27dp"
                android:layout_height="27dp"
                android:src="@drawable/ic_search"
                app:layout_constraintEnd_toStartOf="@id/notification"
                android:layout_marginEnd="40dp"
                android:visibility="visible"/>


            <ImageView
                android:id="@+id/notification"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:src="@drawable/notification"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginStart="170dp"
                android:visibility="visible"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </LinearLayout>


        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/chatRecyclerView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/topBarLayout"
            android:layout_marginTop="5dp"
            android:scrollbars="none"
            android:paddingStart="8dp"/>


    <View
        android:id="@+id/topBarSupporter"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/colorGrey"
        app:layout_constraintBottom_toBottomOf="@id/topBarLayout"/>


    <FrameLayout
        android:id="@+id/addFriendContainer"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:background="@drawable/round_blue_background"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="40dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="75dp"
        android:elevation="5dp">

        <ImageView
            android:id="@+id/addFriend"
            android:layout_width="17dp"
            android:layout_height="17dp"
            android:src="@drawable/addfriend"
            android:scaleType="centerCrop"
            android:layout_gravity="center"
            android:contentDescription="@string/app_name"/>


    </FrameLayout>

</androidx.constraintlayout.widget.ConstraintLayout>