<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ChatScreen"
    android:background="@color/colorWhite">
    
    <LinearLayout
        android:id="@+id/chatTopBar"
        android:layout_width="match_parent"
        android:layout_height="65dp"
        android:orientation="horizontal"
        android:padding="10dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:elevation="5dp">

        <ImageView
            android:id="@+id/backButton"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/back"
            android:layout_gravity="center"
            android:contentDescription="@string/app_name"/>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp">

            <ImageView
                android:id="@+id/chatUserPicture"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:src="@drawable/user_one"
                android:scaleType="centerCrop"
                android:contentDescription="@string/app_name"
                tools:ignore="MissingConstraints" />

            <ImageView
                android:id="@+id/onlineView"
                android:layout_width="14dp"
                android:layout_height="14dp"
                android:src="@drawable/online_status"
                app:layout_constraintBottom_toBottomOf="@id/chatUserPicture"
                app:layout_constraintEnd_toEndOf="@id/chatUserPicture"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

        <LinearLayout
            android:id="@+id/userName_LastSeen"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginStart="14dp">

            <TextView
                android:id="@+id/user_Name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/phoebe"
                android:textStyle="bold"
                android:textColor="@color/colorBlack"
                android:textSize="16sp"
                android:gravity="center_vertical"/>

            <TextView
                android:id="@+id/lastSeen"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Last Seen: 10:59PM"
                android:textSize="12sp"
                android:textColor="@color/colorGreyThick"
                android:gravity="center_vertical"/>

        </LinearLayout>


        <ImageView
            android:id="@+id/videoChat"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:src="@drawable/video"
            android:layout_gravity="center"
            android:layout_marginStart="80dp"
            android:contentDescription="@string/app_name"/>

        <ImageView
            android:id="@+id/voiceCall"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:src="@drawable/voice_call"
            android:layout_gravity="center"
            android:layout_marginStart="25dp"
            android:contentDescription="@string/app_name"/>

    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/message_recycler_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingStart="10dp"
        android:paddingEnd="10dp"
        app:layout_constraintTop_toBottomOf="@id/chatTopBar"/>

    <FrameLayout
        android:id="@+id/text_Typing_Background"
        android:layout_width="110dp"
        android:layout_height="wrap_content"
        android:background="@drawable/left_message_background"
        app:layout_constraintBottom_toTopOf="@id/type_your_message_here_background"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginBottom="20dp"
        android:layout_marginStart="10dp"
        android:paddingStart="10dp">

        <TextView
            android:id="@+id/text_Typing"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Typing..."
            android:fontFamily="@font/segoe"
            android:textColor="@color/colorPrimary"
            android:layout_gravity="center"/>

    </FrameLayout>

    <LinearLayout
        android:id="@+id/type_your_message_here_background"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginBottom="30dp"
        android:paddingEnd="20dp">

        <FrameLayout
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:background="@drawable/type_message_here">

            <ImageView
                android:id="@+id/attachmentIcon"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:src="@drawable/attachment"
                android:contentDescription="@string/app_name"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="13dp"/>

            <EditText
                android:id="@+id/type_your_message_here"
                android:layout_width="210dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:layout_marginStart="20dp"
                android:hint="Type your message here..."
                android:textSize="14sp"
                android:padding="15dp"
                android:inputType="textLongMessage"
                android:background="@null"
                android:fontFamily="@font/segoe"/>

            <ImageView
                android:id="@+id/voiceRecording"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:src="@drawable/voice_recording"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="300dp"
                android:contentDescription="@string/app_name"/>

        </FrameLayout>

        <FrameLayout
            android:id="@+id/action_Send"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:background="@drawable/send_button_background"
            android:layout_marginStart="30dp">

            <ImageView
                android:id="@+id/send"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:src="@drawable/ic_send"
                android:layout_gravity="center"/>

        </FrameLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>